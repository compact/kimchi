block content
  #notice
  #overlay
    .col-md-12.col-lg-12(style="padding: 15px;")
      .panel
        .panel-body
          ul.nav.nav-tabs
            li.active
              a(href="#about-pane", data-toggle="tab") About
            li
              a(href="#bodies-pane", data-toggle="tab") Astronomical Bodies
            li
              a(href="#settings-pane", data-toggle="tab") Options
          .tab-content
            #about-pane.tab-pane.active
              h1 Explore the Solar System
              p [TODO: Blurb.]
              p [TODO: If WebGL support check fails, write a message here.]
              .continue-flying.btn.btn-lg.btn-primary(data-loading-text="Loading...", data-continue-text="Continue Flying [Esc]") Start Flying [Esc]
            #bodies-pane.tab-pane
              table#bodies.table
                tr
                  th Name
                  th
                  th Current Distance
                  th Radius
                  th Distance from the Sun
            #settings-pane.tab-pane
              .setting-row.clearfix
                .setting.btn-group(data-toggle="buttons")
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="rotate", value="true")
                    | On
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="rotate", value="false")
                    | Off
                .setting-description
                  | Bodies rotate
              .setting-row.clearfix
                .setting.btn-group(data-toggle="buttons")
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="revolve", value="true")
                    | On
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="revolve", value="false")
                    | Off
                .setting-description
                  | Bodies revolve around the sun
              .setting-row.clearfix
                .setting.btn-group(data-toggle="buttons")
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="show-hud", value="true")
                    | On
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="show-hud", value="false")
                    | Off
                .setting-description
                  | Show heads-up display
              .setting-row.clearfix
                .setting.btn-group(data-toggle="buttons")
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="show-labels", value="true")
                    | On
                  label.btn.btn-default.btn-sm
                    input(type="radio", name="show-labels", value="false")
                    | Off
                .setting-description
                  | Show text labels and orbits
  #hud1.hud
    strong Controls
    ul
      li Esc: Menu
      li Mouse: Yaw/Pitch
      li W/S: Move Forward/Back
      li A/D: Strafe Left/Right
      li R/F: Strafe Up/Down
      li Q/E: Roll
  #hud2.hud
    ul
      li
        strong Time: 
        #hud-time.hud-value
        .hud-unit
      li
        strong Distance from the Sun: 
        #hud-distance-from-sun.hud-value
        .hud-unit &nbsp;AU
      li
        strong Speed: 
        #hud-speed.hud-value
        .hud-unit &nbsp;AU/s
  #hud3.hud
  #hud4.hud